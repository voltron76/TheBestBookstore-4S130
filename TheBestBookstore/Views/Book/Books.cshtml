@model List<Book>

<div class="container mt-4">
    <h2 class="text-center mb-4">Our Books Collection</h2>
    
    <div class="book-carousel owl-carousel owl-theme">
        @foreach (var book in Model)
        {
            <div class="book-card">
                <div class="card h-100 shadow-sm">
                    <img src="@book.ImageUrl" class="card-img-top book-image" alt="@book.Title">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text text-muted">by @book.Author</p>
                        <p class="card-text font-weight-bold">$@book.Price</p>
                        <div class="mt-auto">
                            <a href="@Url.Action("Details", "Book", new { id = book.Id })" 
                               class="btn btn-info btn-sm mb-2 w-100">View Details</a>
                            <a href="@Url.Action("AddToCart", "Cart", new { id = book.Id })" 
                               class="btn btn-primary btn-sm w-100">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    
    <script>
        $(document).ready(function(){
            $('.book-carousel').owlCarousel({
                loop: true,
                margin: 20,
                nav: true,
                responsive: {
                    0: { items: 1 },
                    576: { items: 2 },
                    768: { items: 3 },
                    992: { items: 4 }
                }
            });
        });
    </script>
}
