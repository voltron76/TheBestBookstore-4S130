@model TheBestBookstore.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-primary">Create</h1>

<h4 class="text-center text-secondary">Create a New Category</h4>

<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6 p-4 rounded shadow bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Index" class="text-decoration-none">Back to List</a>
        </div>
    </div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f4f4f4;
    }
</style>
